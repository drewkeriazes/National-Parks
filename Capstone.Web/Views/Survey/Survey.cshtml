@using Capstone.Web.Models
@model Survey

<head>

    <link href="~/Content/CSS/surveyhome.css" rel="stylesheet" />

</head>

<div class="main">
    <h1>Favorite Park Survey Submission:</h1>
    <h2>Choose your favorite!!</h2>
    <br />

    <form method="post" action="@Url.Action("Survey","Survey")">
        <table>
            <tr>
                <td class="item">
                    Select a Park:
                </td>
                <td>
                    <select name="ParkCode" required>
                        <option value="">Select</option>
                        <option value="CVNP"> Cuyahoga Valley National Park </option>
                        <option value="ENP"> Everglades National Park </option>
                        <option value="GNP"> Glacier National Park </option>
                        <option value="GCNP"> Grand Canyon National Park </option>
                        <option value="GTNP"> Grand Teton National Park </option>
                        <option value="GSMNP"> Great Smokey Mountain National Park </option>
                        <option value="MRNP"> Mount Rainier National Park </option>
                        <option value="RMNP"> Rocky Mountain National Park </option>
                        <option value="YNP"> Yellowstone National Park </option>
                        <option value="YNP2"> Yosemite National Park </option>

                    </select>
                </td>
            </tr>
            <tr><td><h2></h2></td></tr>
            <tr>
                <td class="item">
                    User Email:
                </td>
                <td>
                    <input type="text" name="EmailAddress" required />
                </td>
            </tr>
            <tr><td><h2></h2></td></tr>
            <tr>
                <td class="item">
                    State of Residence:
                </td>
                <td>
                    <select name="state" required>
                        <option value="">Select</option>
                        <option value="AL">Alabama</option>
